{
  "name": "backend",
  "version": "0.0.1",
  "description": "backend",
  "author": "ViktorF",
  "license": "GPL-3.0 license",
  "scripts": {
    "dev": "cross-env NODEMON=true webpack-cli --watch --node-env development",
    "build": "webpack-cli build --node-env production",
    "bundle": "cross-env BUNDLE_NODE_MODULES=true npm run build",
    "start": "node build\\server",
    "release": "npm run bundle&&pkg build/server.js -c pkg.config.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "prettier . --write --ignore-path .prettierignore",
    "lint": "eslint . --ext \".js,.cjs,.mjs,.jsx,.ts,.tsx\" --ignore-path .prettierignore --fix",
    "migrate:make": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "seed:make": "knex seed:make",
    "seed:run": "knex seed:run"
  },
  "dependencies": {
    "@fastify/static": "^6.10.2",
    "@nestjs/common": "^9.4.2",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.4.2",
    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/platform-fastify": "^9.4.2",
    "fastify": "^4.17.0",
    "knex": "^2.4.2",
    "nest-knexjs": "^0.0.15",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.22.3",
    "@babel/preset-typescript": "^7.21.5",
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.12",
    "@types/supertest": "^2.0.12",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "babel-loader": "^9.1.2",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^3.2.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "node-loader": "^2.0.0",
    "nodemon-webpack-plugin": "^4.8.1",
    "pkg": "^5.8.1",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "sqlite3-loader": "^0.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.4",
    "webpack-cli": "^5.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
